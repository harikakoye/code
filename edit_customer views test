baseurl='http://localhost:8000'


class Edit_CustomerTest(APITestCase):
    #maxDiff = None
    """ Test module for Customer model """
    def setUp(self):
        newuser = User.objects.create(first_name='harika',last_name="hamsini")
        newcustomer = Customer.objects.create(user=newuser,is_frequent_buyer = 0)
        newcustomer.save()
    def test_edit_customer(self):
        ##edit_customer
        url = baseurl+'/api/edit_customer/?'
        data = {}
        data["customer_id"] = 1
        data['first_name'] = "Harika"
        data['last_name'] = "Hamsini"
        data["contact_number"] = [{"number":"9494346682","primary":1}]
        data['email'] = [{"email":"hanvi@gmail.com","primary":0}]
        data["dob"] = "2018-03-06"
        data["is_frequent_buyer"] = "True"
        data["locations"] = [{
	"location": [{
		"long_name": "Prakash Nagar",
		"short_name": "Prakash Nagar",
		"types": ["sublocality_level_3", "sublocality", "political"]
	}, {
		"long_name": "Bhagat Singh II",
